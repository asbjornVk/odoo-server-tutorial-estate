<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- LIST VIEW -->
  <record id="view_estate_property_type_list" model="ir.ui.view">
    <field name="name">estate.property.type.list</field>
    <field name="model">estate.property.type</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
      </list>
    </field>
  </record>

  <!-- FORM VIEW -->
  <record id="view_estate_property_type_form" model="ir.ui.view">
    <field name="name">estate.property.type.form</field>
    <field name="model">estate.property.type</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button type="action" 
                  name="%(estate.action_estate_property_type_offer)d"
                  class="oe_stat_button"
                  icon="fa-list">
                <div class="o_stat_info">
                    <span class="o_stat_value"><field name="offer_count"/></span>
                    <span class="o_stat_text">Offers</span>
                </div>
                </button>

        </header> 
        <sheet>
            <font size="16" color="black">
              <field name="name" readonly="1" />
            </font>
            <field name="property_ids">
              <list>
                <field name="name" string="Property Name" />
                <field name="expected_price" string="Expected Price" />
                <field name="state" />
              </list>
            </field>
          </sheet>
      </form>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_estate_property_type" model="ir.actions.act_window">
    <field name="name">Property Types</field>
    <field name="res_model">estate.property.type</field>
    <field name="view_mode">list,form</field>
  </record>


  <!-- MENU -->
  <menuitem id="menu_estate_property_type"
    name="Property Types"
    parent="menu_estate_root"
    action="action_estate_property_type" />

</odoo>