<odoo>
    <record id="action_user_estate_properties" model="ir.actions.act_window">
        <field name="name">My Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('salesperson_id', '=', active_id), ('state', 'in',
            ['new','offer_received','offer_accepted'])]</field>
    </record>


    <record id="view_users_form_inherit_estate" model="ir.ui.view">
        <field name="name">res.users.form.inherit.estate</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button type="action"
                    name="%(estate.action_user_estate_properties)d"
                    class="oe_stat_button"
                    icon="fa-home"
                    groups="base.group_user">
                    <div class="o_stat_info">
                        <span class="o_stat_value">
                            <field name="estate_property_count" />
                        </span>
                        <span class="o_stat_text">Properties </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_users_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit.estate.properties</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Estate" groups="base.group_user">
                    <group>
                        <field name="property_ids">
                            <list>
                                <field name="name" />
                                <field name="state" />
                                <field name="expected_price" />
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>