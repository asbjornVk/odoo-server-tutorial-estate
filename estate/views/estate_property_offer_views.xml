<odoo>
    <!-- List-->
     <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list editable="bottom" 
                    decoration-success="status == 'accepted'"
                    decoration-danger="status == 'refused'">
                <field name="price"/>
                <field name="status" readonly="1"/>
                <field name="partner_id"/>
                <field name="property_id"/>
            </list>
        </field>
    </record>
    <!-- Form -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>                         
                                
                        <field name="price"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="property_id"/>
                        <field name="validity"/>
                        <field name="date_deadline" readonly="1"/>
                    </group>
                    
                        <button name="action_accept" type="object" string="Accept"
                                class="oe_highlight" 
                                invisible="status in ('accepted','refused')"/>
                        <button name="action_refuse" type="object" string="Refuse"
                                invisible="status in ('accepted','refused')"/>
                    
                    
                </sheet>
            </form>
        </field>
    </record>   

<record id="action_estate_property_type_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('property_id.property_type_id', '=', active_id)]</field>
    </record>

    


</odoo>